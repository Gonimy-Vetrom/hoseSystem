<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<modDesc descVersion="33">
    <author>Wopster and Xentro</author>
    <version>1.0.0.0 RC1</version>
    <title>
        <en>Hose system</en>
        <de>Schlauch system</de>
    </title>
    <description>
        <en><![CDATA[With a liquid manure hose you are able to pump a liquid fill type from source to target. If applicable you could extend the liquid manure hose to reach larger ranges.]]></en>
        <de><![CDATA[With a liquid manure hose you are able to pump a liquid fill type from source to target. If applicable you could extend the liquid manure hose to reach larger ranges.]]></de>
    </description>
    <iconFilename>shared/store.dds</iconFilename>
    <multiplayer supported="true" />
	<extraSourceFiles>
		<sourceFile filename="specializations/AnimatedObjectExtension.lua" />
		<sourceFile filename="specializations/HoseSystemLiquidManureFillTrigger.lua" />
		<sourceFile filename="specializations/LoadMaterialHolder.lua" />
		<sourceFile filename="specializations/HoseSystemUtil.lua" />
		<!--<sourceFile filename="specializations/playerInRangeTool.lua" />-->
		<!-- <sourceFile filename="specializations/LiquidManureHoseHandler.lua" /> -->
	</extraSourceFiles>		
	<specializations>
		<specialization name="hoseSystem" className="HoseSystem" filename="specializations/HoseSystem.lua" />
	</specializations>	
	<vehicleTypes>
		<type name="liquidManureHose" className="Vehicle" filename="$dataS/scripts/vehicles/Vehicle.lua">
			<specialization name="animatedVehicle" />
			<specialization name="washable" />
			<specialization name="attacherJoints"/>
			<specialization name="cylindered" />
			<specialization name="mountable" />
			<specialization name="hoseSystem" />
        </type>
	</vehicleTypes>
	<inputBindings>	
		<input name="attachHose" category="VEHICLE" key1="" key2="" button="" device="0" mouse="MOUSE_BUTTON_LEFT" />
		<input name="detachHose" category="VEHICLE" key1="" key2="" button="" device="0" mouse="MOUSE_BUTTON_RIGHT" />
	</inputBindings>
    <storeItems>
        <storeItem xmlFilename="liquidManureHoses/3m/liquidManureHose3m.xml"/>
    </storeItems>
